{{>search}}
{{#if pages}}
<div class="container" id="searchresultsarea" style="min-height: 100vh !important;">
    {{#each pages}}
    <a href="{{this.url}}" class="a">
        <div class="searchresult">
            <h2 id="resultTitle">{{this.title}}</h2>
            <p id="resultDescription">{{this.description}}</p>
        </div>
    </a>
    {{/each}}
</div>
{{>chatpage}}
{{>chaticon}}
{{else}}
<div class="container" id="searchresultsarea" style="display: flex; align-items: center; justify-content: center; width: 100%; height: 100vh;">
    <div class="notfound">
        <span class="text">No results <span class="green-text">found</span>!</span>
    </div>
</div>
{{>chatpage}}
{{>chaticon}}
{{/if}}